/* USER CODE BEGIN PM */
#define ADXL_CS_PORT		GPIOA
#define ADXL_CS_PIN			GPIO_PIN_4
#define BANNER "\r\nAG pointer\r\n"

/* USER CODE END PM */

/* Private variables ---------------------------------------------------------*/
SPI_HandleTypeDef hspi1;

UART_HandleTypeDef huart2;

/* USER CODE BEGIN PV */

uint8_t uart_data[128];
short adxl_saved_values[3];
short adxl_curr_values[3];
short adxl_diff_values[3];
short adxl_calib_values[3];
extern short calib_value[3];
uint8_t init_pending;
/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_SPI1_Init(void);
